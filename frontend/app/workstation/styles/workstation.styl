.workstation {
  height: 666px;
  background-color: #252526;
  position: relative;
  font-size: 13px;

  .terminal.xterm {
    background-color: rgb(0, 0, 0);  
  }
  
  &.hide {
    display: none;  
  }
  &.min, &.restore {
    height: 66px;
    overflow: hidden;

    .terminal-panel {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      z-index: 100;
      background: #000;
    }
    .panel, .panel-container, .panel-axis {
      position: static;
    }
    #MENUBAR {
      display: none;  
    }
    .tab-bar > .tab-show-list {
      margin-right: 90px;  
    }
    .terminal-panel {
      .terminal-toolbar {
        right: 70px;
      }
    }
  }
  &.max {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 100;
    height: auto;

    .tab-bar > .tab-show-list {
      margin-right: 30px;  
    }
    .terminal-panel {
      .terminal-toolbar {
        right: 8px;
      }
    }
  }
  &.term {
    height: 66px;
    overflow: hidden;
    .tab-bar > .tab-show-list {
      margin-right: initial;  
    }
  }
  &.restore {
    height: 160px;
  }
  .workstation-toolbar {
    position: absolute;
    right: 4px;
    top: 2px;
    color: white;
    z-index: 100;
    font-size: 12px;
    i {
      margin-left: 4px;
      cursor: pointer;
    }
  }
  .tab-bar > .tab-show-list {
    margin-right: 90px;  
  }
}