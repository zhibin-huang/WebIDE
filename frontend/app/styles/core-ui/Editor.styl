.CodeMirror-scroll {
  padding-bottom: 18px;
}

.CodeMirror pre {
  font-family: Consolas, "Source Code Pro", Consolas, "Courier New", Menlo, Monaco, "DejaVu Sans Mono", monospace;
  line-height: 1.3;
}

.CodeMirror .CodeMirror-linenumber {
  line-height: 1.3;
}

.CodeMirror .breakpoint-highlight {
  background: red;  
}

.status-bar-editor-widgets {
  display: flex;
  align-items: stretch;
  .editor-widget {
    display: flex;
    align-items: center;
    padding: 0 8px;
  }
}

.mode-widget {
  display: flex;
  position: absolute;
  bottom: 24px;
  min-width: 200px;
  right: 1px;
  flex-direction: column;
  z-index: 201;

  ul {
    max-height: 200px;
    overflow: auto;
  }
}

.image-editor-loading {
  .fa-spinner {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    color: $text-color;
  }
}

.htmlPreview {
  overflow: hidden;
  position: relative;
  .preview-iframe-msk {
    position: absolute;
    overflow: auto;
    width: 100%;
    height: 100%;
  }
  iframe {
    position: absolute;
    overflow: auto;
    width: 100%;
    height: 100%;
    border: 0;
    background-color: white;
  }
}